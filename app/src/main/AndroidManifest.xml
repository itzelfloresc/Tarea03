<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tarea2Equipo">

        <!--
            MAIN ACTIVITY
            Esta actividad es la pantalla principal (pantalla de inicio).
            android:exported="true" es obligatorio para actividades que
            tienen filtros de intención.
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true">

            <!-- Indica que esta actividad es el punto de entrada de la app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!--
            INGREDIENTES ACTIVITY
            Pantalla que muestra la lista de ingredientes.
        -->
        <activity
            android:name=".IngredientesActivity"
            android:exported="false" />

        <!--
            INFO INGREDIENTE ACTIVITY
            Pantalla para mostrar la información detallada de un ingrediente.
        -->
        <activity
            android:name=".InfoIngredienteActivity"
            android:exported="false" />

        <activity android:name=".CarritoActivity"
            android:exported="false" />

        <activity android:name=".PerfilActivity" android:exported="false" />

    </application>

</manifest>
