<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo"
    tools:context=".InfoIngredienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textTituloIngrediente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detalle_nombre_ingrediente"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/blanco"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/imageIngrediente"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/gillyweed"
                android:scaleType="centerCrop"
                android:contentDescription="@string/detalle_imagen_descripcion"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detalle_propiedades_label"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blanco"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textPropiedadesDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detalle_cargando_descripcion"
                android:textSize="16sp"
                android:textColor="@color/blanco_transparente"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/textPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detalle_precio_inicial"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/color_accent"
                android:gravity="end"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAgregarCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_agregar_carrito"
        app:backgroundTint="#4CAF50"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRegresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_regresar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>